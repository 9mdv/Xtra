<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.exact.xtra.util.TwitchApiHelper"/>
        <import type="android.text.format.DateUtils"/>
        <variable
            name="clip"
            type="com.exact.xtra.model.clip.Clip"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/cardStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail"
                app:imageUrl="@{clip.thumbnails.medium}"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <TextView
                android:id="@+id/date"
                android:text="@{TwitchApiHelper.parseIso8601Date(context, clip.createdAt)}"
                tools:text="April 20, 2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/thumbnail"
                android:layout_alignEnd="@id/thumbnail"
                android:layout_alignBottom="@id/thumbnail"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/views"
                android:text="@{@plurals/views(clip.views, clip.views)}"
                tools:text="133769 views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/thumbnail"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/length"
                android:text="@{DateUtils.formatElapsedTime((long)clip.duration)}"
                tools:text="13:37"
                style="@style/VideoLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

            <ImageView
                android:id="@+id/userImage"
                app:imageUrl="@{clip.broadcaster.logo}"
                app:circle="@{true}"
                tools:src="@tools:sample/backgrounds/scenic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/thumbnail"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/title"
                android:text="@{clip.title}"
                tools:text="@sample/clips.json/clips/title"
                style="@style/VideoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/thumbnail"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage" />

            <TextView
                android:id="@+id/username"
                android:text="@{clip.broadcaster.name}"
                tools:text="@sample/clips.json/clips/broadcaster/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage" />

            <TextView
                android:id="@+id/gameName"
                android:text="@{clip.game}"
                tools:text="@sample/clips.json/clips/game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"/>

            <!--<ImageButton-->
            <!--android:id="@+id/moreImgBtn"-->
            <!--android:src="@drawable/baseline_more_vert_black_24"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_below="@id/thumbnailImage"-->
            <!--android:visibility="gone"/>-->

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
