<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="video"
            type="com.github.exact7.xtra.model.kraken.video.Video"/>
        <variable
            name="videoListener"
            type="com.github.exact7.xtra.ui.videos.BaseVideosFragment.OnVideoSelectedListener"/>
        <variable
            name="channelListener"
            type="com.github.exact7.xtra.ui.common.OnChannelSelectedListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:onClick="@{() -> videoListener.startVideo(video)}"
        style="@style/Card"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail"
                style="@style/Thumbnail"
                app:imageUrl="@{video.preview.large}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/date"
                style="@style/ThumbnailItem"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                app:date="@{video.createdAt}"
                app:layout_constraintBottom_toBottomOf="@id/thumbnail"
                app:layout_constraintEnd_toEndOf="@id/thumbnail"
                app:layout_constraintRight_toRightOf="@id/thumbnail"
                tools:text="April 20, 2017" />

            <TextView
                android:id="@+id/views"
                style="@style/ThumbnailItem"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="@id/thumbnail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="133769 views" />

            <TextView
                android:id="@+id/duration"
                style="@style/VideoDuration"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:duration="@{video.length}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="13:37" />

            <ImageView
                android:id="@+id/userImage"
                style="@style/UserPicture"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:onClick="@{() -> channelListener.viewChannel(video.channel)}"
                app:circle="@{true}"
                app:imageUrl="@{video.channel.logo}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/thumbnail"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:onClick="@{() -> channelListener.viewChannel(video.channel)}"
                android:text="@{video.channel.displayName}"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:gravity="start"
                app:layout_constraintEnd_toStartOf="@+id/options"
                app:layout_constraintRight_toLeftOf="@+id/options"
                app:layout_constraintLeft_toRightOf="@id/userImage"
                app:layout_constraintStart_toEndOf="@id/userImage"
                app:layout_constraintTop_toBottomOf="@id/thumbnail"
                tools:text="@sample/videos.json/vods/channel/name" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="@{video.title}"
                android:textAlignment="viewStart"
                android:gravity="start"
                app:layout_constraintEnd_toStartOf="@+id/options"
                app:layout_constraintRight_toLeftOf="@+id/options"
                app:layout_constraintLeft_toRightOf="@id/userImage"
                app:layout_constraintStart_toEndOf="@id/userImage"
                app:layout_constraintTop_toBottomOf="@id/username"
                tools:text="@sample/videos.json/vods/title" />

            <TextView
                android:id="@+id/gameName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="10dp"
                android:text="@{video.game}"
                android:textColor="?attr/secondaryTextColor"
                android:textAlignment="viewStart"
                android:gravity="start"
                app:layout_constraintEnd_toStartOf="@+id/options"
                app:layout_constraintRight_toLeftOf="@+id/options"
                app:layout_constraintLeft_toRightOf="@id/userImage"
                app:layout_constraintStart_toEndOf="@id/userImage"
                app:layout_constraintTop_toBottomOf="@id/title"
                tools:text="@sample/videos.json/vods/game" />

            <ImageButton
                android:id="@+id/options"
                style="?android:attr/actionOverflowButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/thumbnail" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
