<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.github.exact7.xtra.util.TwitchApiHelper"/>
        <import type="android.text.format.DateUtils"/>
        <variable
            name="video"
            type="com.github.exact7.xtra.model.video.Video"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/cardStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail"
                app:imageUrl="@{video.preview.large}"
                tools:src="@tools:sample/backgrounds/scenic"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thumbnailHeight"/>

            <TextView
                android:id="@+id/date"
                android:text="@{TwitchApiHelper.parseIso8601Date(context, video.createdAt)}"
                tools:text="April 20, 2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/thumbnail"
                android:layout_alignEnd="@id/thumbnail"
                android:layout_alignBottom="@id/thumbnail"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/views"
                android:text="@{@plurals/views(video.views, video.views)}"
                tools:text="133769 views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/thumbnail"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/length"
                android:text="@{DateUtils.formatElapsedTime(video.length)}"
                tools:text="13:37"
                style="@style/VideoLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

            <ImageView
                android:id="@+id/userImage"
                app:imageUrl="@{video.channel.logo}"
                app:circle="@{true}"
                tools:src="@tools:sample/backgrounds/scenic"
                style="@style/UserPicture"
                android:layout_below="@id/thumbnail"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/title"
                android:text="@{video.title}"
                tools:text="@sample/videos.json/vods/title"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_marginTop="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage" />

            <TextView
                android:id="@+id/username"
                android:text="@{video.channel.name}"
                tools:text="@sample/videos.json/vods/channel/name"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage" />

            <TextView
                android:id="@+id/gameName"
                android:text="@{video.game}"
                tools:text="@sample/videos.json/vods/game"
                android:textColor="?attr/secondaryTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage"
                android:layout_marginTop="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
