<?xml version="1.0" encoding="utf-8"?>
<com.github.exact7.xtra.ui.view.SlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.exact7.xtra.ui.view.CustomPlayerView
        android:id="@id/playerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/playerHeight"
        android:background="@android:color/black"
        app:controller_layout_id="@layout/player_video"
        app:show_buffering="always"
        app:resize_mode="fill"/>

    <View
        android:id="@id/chatView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"/>

</com.github.exact7.xtra.ui.view.SlidingLayout>
