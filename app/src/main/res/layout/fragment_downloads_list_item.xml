<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.github.exact7.xtra.util.TwitchApiHelper"/>
        <variable name="video" type="com.github.exact7.xtra.model.offline.OfflineVideo"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail"
                app:imageUrl="@{video.thumbnail}"
                tools:src="@tools:sample/backgrounds/scenic"
                style="@style/Thumbnail"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/uploaded_date(TwitchApiHelper.formatTime(context, video.uploadDate))}"
                android:layout_alignBottom="@id/thumbnail"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                tools:text="Uploaded: July 16"
                style="@style/ThumbnailItem"
                />

            <TextView
                android:id="@+id/downloadDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/downloaded_date(TwitchApiHelper.formatTime(context, video.downloadDate))}"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignBottom="@id/thumbnail"
                android:layout_alignEnd="@id/thumbnail"
                android:layout_alignRight="@id/thumbnail"
                tools:text="Downloaded: August 7"
                style="@style/ThumbnailItem"
                />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:duration="@{video.duration}"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                tools:text="13:37"
                style="@style/VideoDuration"
                />

            <ImageView
                android:id="@+id/userImage"
                app:imageUrl="@{video.channelLogo}"
                app:circle="@{true}"
                android:layout_below="@id/thumbnail"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                tools:src="@tools:sample/backgrounds/scenic"
                style="@style/UserPicture"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{video.name}"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_below="@id/thumbnail"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage"
                android:layout_toStartOf="@+id/options"
                android:layout_toLeftOf="@+id/options"
                tools:text="This is the title of the video"
                style="@style/VideoTitle"
                />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{video.channelName}"
                android:layout_below="@id/title"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage"
                android:layout_toStartOf="@+id/options"
                android:layout_toLeftOf="@+id/options"
                tools:text="summit1g"
                />

            <TextView
                android:id="@+id/game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{video.game}"
                android:textColor="?attr/secondaryTextColor"
                android:layout_below="@id/username"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                tools:text="Dota 2"
                />

            <ImageButton
                android:id="@+id/options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                style="?android:attr/actionOverflowButtonStyle"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/downloading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:visible="@{!video.downloaded}"
            android:layout_gravity="center"
            android:background="#80000000"
            android:gravity="center"
            android:text="@string/downloading"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:clickable="true"
            android:focusable="true" />

    </androidx.cardview.widget.CardView>
</layout>
