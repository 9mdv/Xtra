<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="video" type="com.exact.xtra.model.OfflineVideo"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/cardStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail"
                app:imageUrl="@{video.thumbnail}"
                tools:src="@tools:sample/backgrounds/scenic"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thumbnailHeight"/>

            <TextView
                android:id="@+id/date"
                android:text="@{@string/uploaded_date(video.uploadDate)}"
                tools:text="Uploaded: July 16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/thumbnail"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/downloadDate"
                android:text="@{@string/downloaded_date(video.downloadDate)}"
                tools:text="Downloaded: August 7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignBottom="@id/thumbnail"
                android:layout_alignEnd="@id/thumbnail"
                android:layout_alignRight="@id/thumbnail" />

            <TextView
                android:id="@+id/length"
                android:text="@{String.valueOf(video.length)}"
                tools:text="13:37"
                style="@style/VideoLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

            <ImageView
                android:id="@+id/userImage"
                app:imageUrl="@{video.streamerAvatar}"
                app:circle="@{true}"
                tools:src="@tools:sample/backgrounds/scenic"
                style="@style/UserPicture"
                android:layout_below="@id/thumbnail"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/title"
                android:text="@{video.name}"
                tools:text="This is the title of the video"
                style="@style/VideoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_below="@id/thumbnail"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage"  />

            <TextView
                android:id="@+id/username"
                android:text="@{video.channel}"
                tools:text="summit1g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage" />

            <TextView
                android:id="@+id/game"
                android:text="@{video.game}"
                tools:text="Dota 2"
                android:textColor="?attr/secondaryTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
