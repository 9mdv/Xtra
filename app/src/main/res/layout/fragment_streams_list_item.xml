<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="stream"
            type="com.exact.xtra.model.stream.Stream"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail"
                app:imageUrl="@{stream.preview.medium}"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/viewers"
                android:text="@{@plurals/viewers(stream.viewers, stream.viewers)}"
                android:layout_alignBottom="@id/thumbnail"
                android:layout_toEndOf="@id/streamTypeImage"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/streamTypeImage" />

            <ImageView
                android:id="@+id/streamTypeImage"
                android:src="@{!stream.playlist ? @drawable/baseline_fiber_manual_record_black_24 : @drawable/baseline_replay_black_24 }"
                android:tint="@{!stream.playlist ? @android:color/holo_red_dark : @android:color/darker_gray }"
                android:layout_alignBottom="@id/thumbnail"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:id="@+id/userImage"
                app:imageUrl="@{stream.channel.logo}"
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_below="@id/thumbnail"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/username"
                android:text="@{stream.channel.name}"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:layout_toEndOf="@id/userImage"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/userImage" />

            <TextView
                android:id="@+id/title"
                android:text="@{stream.channel.status}"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_toEndOf="@id/userImage"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/userImage" />

            <TextView
                android:id="@+id/gameName"
                android:text="@{stream.game}"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_toEndOf="@id/userImage"
                android:layout_toRightOf="@id/userImage"
                android:layout_marginLeft="5dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
