<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        style="@style/Player.Shadow" />

    <ImageButton
        style="@style/Player.Play"/>

    <ImageButton
        style="@style/Player.Pause"/>

    <ImageButton
        style="@style/Player.Minimize"/>

    <TextView
        style="@style/Player.Channel"/>

    <ImageButton
        android:id="@+id/resume"
        style="@style/Player.Resume"/>

    <LinearLayout
        style="@style/Player.TopRightPanel">

        <ImageButton
            style="@style/Player.Follow"
            />

        <ImageButton
            style="@style/Player.Ratio"
            />

        <ImageButton
            style="@style/Player.Settings"
            />

    </LinearLayout>

    <ImageButton
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        style="@style/Player.FullscreenEnter"/>

</RelativeLayout>