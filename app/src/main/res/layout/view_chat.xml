<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/chat_list_item"/>

        <Button
            android:id="@+id/btnDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_down"
            android:layout_alignBottom="@id/recyclerView"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/messageView"
        android:orientation="horizontal"
        android:background="?attr/primaryColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textCapSentences|textAutoComplete|textNoSuggestions"
            android:imeOptions="actionSend"/>

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_backspace_black_24"
            android:tint="?attr/textColor"
            android:background="?android:selectableItemBackground"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/emotes"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tag_faces_black_24dp"
            android:tint="?attr/textColor"
            android:background="?android:selectableItemBackground"/>

        <ImageButton
            android:id="@+id/send"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_send_black_24dp"
            android:tint="?attr/textColor"
            android:background="?android:selectableItemBackground"
            android:visibility="gone"/>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"
            app:tabGravity="fill"/>

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>