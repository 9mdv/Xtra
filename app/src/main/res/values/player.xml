<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Player">
        <item name="show_buffering">always</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="surface_type">surface_view</item>
    </style>

    <style name="Player.Portrait" parent="Player">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="resize_mode">fixed_height</item>
    </style>

    <style name="Player.Landscape" parent="Player">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="resize_mode">fit</item>
    </style>

    <style name="Player.Image">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="Player.SmallImage" parent="Player.Image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Player.LargeImage" parent="Player.Image">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="Player.Play" parent="Player.LargeImage">
        <item name="android:id">@id/exo_play</item>
        <item name="android:src">@drawable/baseline_play_arrow_black_48</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="Player.Pause" parent="Player.LargeImage">
        <item name="android:id">@id/exo_pause</item>
        <item name="android:src">@drawable/baseline_pause_black_48</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="Player.TopRightPanel">
        <item name="android:id">@id/topRightPanel</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Player.Minimize" parent="Player.SmallImage">
        <item name="android:id">@id/minimize</item>
        <item name="android:src">@drawable/baseline_expand_more_black_48</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="Player.Settings" parent="Player.SmallImage">
        <item name="android:id">@id/settings</item>
        <item name="android:src">@drawable/baseline_settings_black_24</item>
    </style>

    <style name="Player.Download" parent="Player.SmallImage">
        <item name="android:id">@id/download</item>
        <item name="android:src">@drawable/ic_file_download_black_24dp</item>
    </style>

    <style name="Player.Follow" parent="Player.SmallImage">
        <item name="android:id">@id/follow</item>
        <item name="android:src">@drawable/baseline_favorite_border_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Player.Sleep" parent="Player.SmallImage">
        <item name="android:id">@id/sleepTimer</item>
        <item name="android:src">@drawable/baseline_alarm_black_24</item>
    </style>

    <style name="Player.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Player.Position" parent="Player.Text">
        <item name="android:id">@id/exo_position</item>
        <item name="android:layout_width">55sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Player.Duration" parent="Player.Text">
        <item name="android:id">@id/exo_duration</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="Player.Progress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_toEndOf">@id/exo_position</item>
        <item name="android:layout_toRightOf">@id/exo_position</item>
        <item name="android:layout_toLeftOf">@id/exo_duration</item>
        <item name="android:layout_toStartOf">@id/exo_duration</item>
    </style>

    <style name="Player.FullscreenEnter" parent="Player.SmallImage">
        <item name="android:id">@id/fullscreenEnter</item>
        <item name="android:src">@drawable/baseline_fullscreen_black_24</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="Player.FullscreenExit" parent="Player.SmallImage">
        <item name="android:id">@id/fullscreenExit</item>
        <item name="android:src">@drawable/baseline_fullscreen_exit_black_24</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="Player.Resume" parent="Player.LargeImage">
        <item name="android:src">@drawable/baseline_fast_forward_black_48</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="Player.Rewind" parent="Player.LargeImage">
        <item name="android:id">@id/exo_rew</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="Player.Forward" parent="Player.LargeImage">
        <item name="android:id">@id/exo_ffwd</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="Player.Channel" parent="Player.Text">
        <item name="android:id">@id/channel</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_toEndOf">@id/minimize</item>
        <item name="android:layout_toRightOf">@id/minimize</item>
        <item name="android:layout_toStartOf">@id/topRightPanel</item>
        <item name="android:layout_toLeftOf">@id/topRightPanel</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Player.HideChat" parent="Player.SmallImage">
        <item name="android:id">@id/hideChat</item>
        <item name="android:src">@drawable/baseline_speaker_notes_off_black_24</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Player.ShowChat" parent="Player.SmallImage">
        <item name="android:id">@id/showChat</item>
        <item name="android:src">@drawable/baseline_speaker_notes_black_24</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Player.Ratio" parent="Player.SmallImage">
        <item name="android:id">@id/aspectRatio</item>
        <item name="android:src">@drawable/baseline_aspect_ratio_black_24</item>
    </style>

    <style name="Player.Shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:alpha">0.4</item>
    </style>

</resources>