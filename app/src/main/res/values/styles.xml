<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="primaryColor">@color/primaryDark</item>
        <item name="textColor">@android:color/white</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:windowBackground">?attr/primaryColor</item>
        <item name="android:colorBackground">?attr/primaryColor</item>
        <item name="navBarStyle">@style/NavBarDark</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDark</item>
        <item name="dividerColor">@color/secondaryDark</item>
        <item name="android:textColorSecondary">@color/secondaryTextColorDark</item>
        <item name="secondaryTextColor">@color/secondaryTextColorDark</item>
        <item name="colorButtonNormal">@color/secondaryDark</item>
        <item name="android:dialogTheme">@style/DialogDark</item>
        <item name="alertDialogTheme">@style/DialogDark</item>
        <item name="android:radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton</item>
    </style>

    <style name="BaseLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="primaryColor">@color/primaryLight</item>
        <item name="textColor">@android:color/black</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:windowBackground">?attr/primaryColor</item>
        <item name="android:colorBackground">?attr/primaryColor</item>
        <item name="navBarStyle">@style/NavBarLight</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetLight</item>
        <item name="dividerColor">@color/secondaryLight</item>
        <item name="android:textColorSecondary">@color/secondaryTextColorLight</item>
        <item name="secondaryTextColor">@color/secondaryTextColorLight</item>
        <item name="colorButtonNormal">@color/secondaryLight</item>
        <item name="android:dialogTheme">@style/DialogLight</item>
        <item name="alertDialogTheme">@style/DialogLight</item>
        <item name="android:radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton</item>
    </style>

    <style name="BaseAmoledTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@android:color/white</item>
        <item name="primaryColor">@android:color/black</item>
        <item name="textColor">@android:color/white</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:windowBackground">?attr/primaryColor</item>
        <item name="android:colorBackground">?attr/primaryColor</item>
        <item name="navBarStyle">@style/NavBarAmoled</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetAmoled</item>
        <item name="dividerColor">@color/secondaryDark</item>
        <item name="android:textColorSecondary">@color/secondaryTextColorDark</item>
        <item name="secondaryTextColor">@color/secondaryTextColorDark</item>
        <item name="colorButtonNormal">@color/secondaryAmoled</item>
        <item name="android:dialogTheme">@style/DialogAmoled</item>
        <item name="alertDialogTheme">@style/DialogAmoled</item>
        <item name="android:radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton</item>
    </style>

    <style name="AmoledTheme" parent="BaseAmoledTheme" />
    <style name="DarkTheme" parent="BaseDarkTheme" />
    <style name="LightTheme" parent="BaseLightTheme" />

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">?attr/primaryColor</item>
    </style>

    <style name="MenuIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:tint">?attr/textColor</item>
    </style>

    <style name="NavBarDark">
        <item name="android:background">@color/primaryDark</item>
        <item name="itemIconTint">@color/nav_bar_dark</item>
        <item name="itemTextColor">@color/nav_bar_dark</item>
    </style>

    <style name="NavBarLight">
        <item name="android:background">@color/primaryLight</item>
        <item name="itemIconTint">@color/nav_bar_light</item>
        <item name="itemTextColor">@color/nav_bar_light</item>
    </style>

    <style name="NavBarAmoled">
        <item name="android:background">@android:color/black</item>
        <item name="itemIconTint">@color/nav_bar_dark</item>
        <item name="itemTextColor">@color/nav_bar_dark</item>
    </style>

    <style name="BottomSheetDark" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:colorBackground">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/secondaryDark</item>
        <item name="radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton</item>
    </style>

    <style name="BottomSheetLight" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:colorBackground">@color/primaryLight</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/secondaryLight</item>
        <item name="radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton</item>
    </style>

    <style name="BottomSheetAmoled" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorButtonNormal">@color/secondaryAmoled</item>
        <item name="radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton</item>
    </style>

    <style name="DialogDark" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogLight" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:background">@color/primaryLight</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogAmoled" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/textColor</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Outline">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>

    <style name="Thumbnail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/thumbnail_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ThumbnailItem" parent="Outline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="VideoDuration" parent="ThumbnailItem">
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="VideoTitle">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="UserPicture">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Search">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/baseline_search_black_24</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">?attr/textColor</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="MediaSpinner">
        <item name="android:id">@id/spinner</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="ChatView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="VideoProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:max">100</item>
        <item name="android:scaleY">1.5</item>
        <item name="android:layoutDirection" tools:ignore="NewApi">ltr</item>
    </style>

</resources>
