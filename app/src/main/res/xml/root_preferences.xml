<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:key="theme"
        android:title="@string/theme"
        android:summary="%s"
        android:entries="@array/themeEntries"
        android:entryValues="@array/themeValues"
        app:iconSpaceReserved="false"
        />

    <SeekBarPreference
        android:key="chatWidth"
        android:title="@string/landscape_chat_width"
        android:summary="@string/percentage_of_screen"
        android:max="50"
        app:iconSpaceReserved="false"
        />

    <ListPreference
        android:key="columnsPortrait"
        android:title="@string/portrait_column_count"
        android:summary="%s"
        android:entries="@array/portraitColumnCount"
        android:entryValues="@array/portraitColumnCount"
        android:defaultValue="1"
        app:iconSpaceReserved="false"
        />

    <ListPreference
        android:key="columnsLandscape"
        android:title="@string/landscape_column_count"
        android:summary="%s"
        android:entries="@array/landscapeColumnCount"
        android:entryValues="@array/landscapeColumnCount"
        android:defaultValue="2"
        app:iconSpaceReserved="false"
        />

    <ListPreference
        android:key="downloadNetworkPreference"
        android:title="@string/download_preference"
        android:summary="%s"
        android:entries="@array/networkDownloadPreferencesEntries"
        android:entryValues="@array/networkDownloadPreferencesValues"
        android:defaultValue="3"
        app:iconSpaceReserved="false"
        />

    <ListPreference
        android:key="playerRewind"
        android:title="@string/rewind"
        android:summary="@string/seconds"
        android:entries="@array/playerSeekEntries"
        android:entryValues="@array/playerSeekValues"
        android:defaultValue="5000"
        app:iconSpaceReserved="false"
        />

    <ListPreference
        android:key="playerForward"
        android:title="@string/forward"
        android:summary="@string/seconds"
        android:entries="@array/playerSeekEntries"
        android:entryValues="@array/playerSeekValues"
        android:defaultValue="5000"
        app:iconSpaceReserved="false"
        />

    <SwitchPreferenceCompat
        android:key="pictureInPicture"
        android:title="@string/picture_in_picture"
        android:summary="@string/continue_playback"
        android:defaultValue="true"
        app:iconSpaceReserved="false"
        app:isPreferenceVisible="false"
        />

    <SwitchPreferenceCompat
        android:key="animatedGifEmotes"
        android:title="@string/animated_emotes"
        android:defaultValue="true"
        app:iconSpaceReserved="false"/>

    <SwitchPreferenceCompat
        android:key="showChangelogs"
        android:title="@string/show_changelogs"
        android:defaultValue="true"
        app:iconSpaceReserved="false"/>

</androidx.preference.PreferenceScreen>
