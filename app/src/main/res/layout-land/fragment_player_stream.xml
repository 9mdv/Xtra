<?xml version="1.0" encoding="utf-8"?>
<com.github.exact7.xtra.ui.view.draggableview.DraggableView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:DraggableView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draggableView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.player.BasePlayerFragment"
    DraggableView:top_view_id="@id/playerView"
    DraggableView:bottom_view_id="@id/chatContainer"
    DraggableView:enable_click_to_maximize_view="true"
    DraggableView:enable_minimized_horizontal_alpha_effect="false"
    DraggableView:top_view_margin_bottom="130dp"
    DraggableView:top_view_margin_right="30dp">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/black"
        app:controller_layout_id="@layout/player_stream"
        app:show_buffering="always"
        android:layout_toStartOf="@id/chatContainer"
        android:layout_toLeftOf="@id/chatContainer" />


    <LinearLayout
        android:id="@+id/chatContainer"
        android:orientation="vertical"
        android:layout_width="175dp"
        android:layout_height="match_parent"

        android:background="?android:colorBackground">

        <com.github.exact7.xtra.ui.view.ChatView
            android:id="@+id/chatView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <com.github.exact7.xtra.ui.view.MessageView
            android:id="@+id/messageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>