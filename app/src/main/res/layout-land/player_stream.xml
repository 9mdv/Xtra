<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <ImageButton
        style="@style/Player.Play"/>

    <ImageButton
        style="@style/Player.Pause"/>

    <ImageButton
        android:id="@+id/minimize"
        style="@style/Player.Minimize"/>

    <TextView
        android:id="@+id/channel"
        style="@style/Player.Channel"/>

    <ImageButton
        android:id="@+id/resume"
        style="@style/Player.Resume"/>

    <LinearLayout
        android:id="@+id/topRightPanel"
        style="@style/Player.TopRightPanel">

        <ImageButton
            android:id="@+id/follow"
            style="@style/Player.Follow"
            />

        <ImageButton
            android:id="@+id/profile"
            style="@style/Player.Profile"
            />

        <ImageButton
            android:id="@+id/settings"
            style="@style/Player.Settings"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/minimizePlayer"
            android:src="@drawable/baseline_unfold_less_black_24"
            android:rotation="90"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            style="@style/Player.SmallImage" />

        <ImageButton
            android:id="@+id/maximizePlayer"
            android:src="@drawable/baseline_unfold_more_black_24"
            android:rotation="90"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            style="@style/Player.SmallImage"
            />

        <!--<ImageButton-->
        <!--android:id="@+id/player_hide_chat"-->
        <!--android:visibility="gone"-->
        <!--android:src="@drawable/baseline_speaker_notes_off_black_24" />-->


        <!--<ImageButton-->
        <!--android:id="@+id/player_show_chat"-->
        <!--android:visibility="gone"-->
        <!--android:src="@drawable/baseline_chat_black_24" />-->

        <ImageButton
            android:id="@+id/fullscreenExit"
            style="@style/Player.FullscreenExit"/>

    </LinearLayout>

</RelativeLayout>