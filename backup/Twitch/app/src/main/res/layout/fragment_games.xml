<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <ProgressBar
        android:id="@+id/fragment_games_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_games_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_games_rv_top_games"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.games.GamesFragment"
            android:name="com.exact.twitch.fragments.GamesFragment"
            tools:listitem="@layout/fragment_games_list_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
