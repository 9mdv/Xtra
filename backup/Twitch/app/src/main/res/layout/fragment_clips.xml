<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    
    <ProgressBar
        android:id="@+id/fragment_clips_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/fragment_clips_rl_sort_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/fragment_clips_tv_sort_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/fragment_clips_iv_sort_by"
            android:layout_toLeftOf="@id/fragment_clips_iv_sort_by" />

        <ImageView
            android:id="@+id/fragment_clips_iv_sort_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/fragment_clips_tv_sort_by"
            android:src="@drawable/baseline_sort_black_24"
            android:layout_toLeftOf="@id/fragment_clips_tv_sort_by" />

        <TextView
            android:id="@+id/fragment_clips_tv_sort_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/sort_by"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_clips_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_clips_rl_sort_by">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_clips_rv"
            android:name="com.exact.twitch.fragments.clip.ClipsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.clips.BaseClipsFragment"
            tools:listitem="@layout/fragment_clips_list_item" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/fragment_clips_tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_above="@id/fragment_clips_btn_login"
        android:text="Sign in to view your followed clips"/>

    <Button
        android:id="@+id/fragment_clips_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="Sign in"/>
</RelativeLayout>