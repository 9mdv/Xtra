<?xml version="1.0" encoding="utf-8"?>
<com.exact.twitch.ui.view.draggableview.DraggableView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:DraggableView="http://schemas.android.com/apk/res-auto"
    android:id="@id/fragment_player_draggable_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.player.BasePlayerFragment"
    DraggableView:top_view_id="@id/fragment_player_pv_player"
    DraggableView:bottom_view_id="@id/fragment_player_chat_rv"
    DraggableView:enable_click_to_maximize_view="true"
    DraggableView:enable_minimized_horizontal_alpha_effect="false"
    DraggableView:top_view_margin_bottom="130dp"
    DraggableView:top_view_margin_right="30dp">

    <com.exact.twitch.ui.view.ChatRecyclerView
        android:id="@id/fragment_player_chat_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:colorBackground"
        android:layout_below="@id/fragment_player_pv_player"/>

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@id/fragment_player_pv_player"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/black"
        app:controller_layout_id="@layout/player_video"
        app:show_buffering="true"
        app:resize_mode="fill"/>

</com.exact.twitch.ui.view.draggableview.DraggableView>
