<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_player_sv"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/fragment_player_pv_player"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        app:controller_layout_id="@layout/player_stream"
        app:show_buffering="true"/>


    <LinearLayout
        android:id="@+id/fragment_player_ll_chat_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground"
        android:layout_toEndOf="@+id/fragment_player_player_container"
        android:layout_toRightOf="@+id/fragment_player_player_container">

        <com.exact.twitch.ui.view.ChatRecyclerView
            android:id="@+id/fragment_player_chat_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <com.exact.twitch.ui.view.MessageView
            android:id="@+id/fragment_player_cmv_chat_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>